<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appender>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{ISO8601}] %-5p %c %m %n"/>
        </Console>
    </Appender>

    <Loggers>
        <category name="org.hibernate" level="warn" />
        <category name="org.jboss.cache" level="debug" />
        <category name="org.hibernate.hql" level="info" />
        <category name="org.apache.commons" level="error" />
        <category name="org.springframework" level="warn" />
        <category name="org.apache.velocity" level="warn" />
        <category name="com.vmc.biz" level="info" />

        <Root level="all">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>